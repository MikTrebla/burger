<div id='headerBox'>
    <h1 style='text-align: center;'>Eat the burger!</h1>
    <div class='row'>
        <div class='col-md-4'></div>
        <div class='col-md-4'>
            <img src='https://www.spreadshirt.com/image-server/v1/mp/designs/1014878535,width=178,height=178/funny-kawaii-brown-bear-on-a-burger.png'>
        </div>
        <div class='col-md-4'></div>
    </div>
</div>


<hr>

<div id='burgerContainer'>
    <div class='row'>

        <div id='eaten' class='col-md-6'>
            <h2>Burgers to be eaten!</h2>
            <br>
            <ul>
                {{#each burgers}} {{#unless devoured}}
                <li>
                    {{this.id}}. {{this.burger_name}}
                    <button data-id='{{this.id}}' data-status='true' class='eatBurgerBtn'>Eat Burger!</button>
                </li>
                {{/unless}} {{/each}}
            </ul>
        </div>

        <div id='uneaten' class='col-md-6'>
            <h2>Burgers already eaten!</h2>
            <br>
            <ul>
                {{#each burgers}} {{#if devoured}}
                <li>
                    {{this.id}}. {{this.burger_name}}
                </li>
                {{/if}} {{/each}}
            </ul>
        </div>
    </div>
</div>

<form class='create-form'>
    <div class='row'>
        <div class='col-md-3'></div>
        <div class='col-md-6 lala'>
            <div id='createBurgerBox' class='form-group'>
                <label for='newBurger'> What kind of burger do you want to create?</label>
                <input type='text' id='newBurger' name='burger'>
            </div>
            <div id='createBurgerBox' class='form group'>
                <input type='radio' name='eatNow' value='true' checked> Eat now!
                <input type='radio' name='eatNow' value='false'> Meh..eat later.
            </div>
            <div id='createBurgerBox'>
                <button type='submit'>Create the burger!</button>
            </div>
        </div>
        <div class='col-md-3'></div>
    </div>
</form>